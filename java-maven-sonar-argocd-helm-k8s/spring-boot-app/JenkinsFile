pipeline {
    agent {
        docker {
            image 'rahul407/jenkins-maven-java17-agent:latest'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock --network host' // mount Docker socket to access the host's Docker daemon
        }
    }
    
    // FIX 1: Skip the automatic SCM checkout which was failing due to permissions
    options {
        skipDefaultCheckout()
    }

    stages {
        stage('Checkout') {
            steps {
                sh 'echo Starting custom checkout'
                
                // FIX 2: Ensure the workspace ownership is correct before ANY git command
                // This resolves the "insufficient permission" error on .git/objects
                sh 'chown -R $(id -u):$(id -g) .'
                
                // Perform the Git clone/checkout manually
                // Use the standard 'checkout scm' step or a manual 'git' command. 
                // Using 'checkout scm' is often best as it uses Jenkins credentials if defined.
                checkout scm
                
                // --- Your original commands follow ---
                
                sh 'git config --global --add safe.directory /var/lib/jenkins/workspace/ultimate-cicd'
                
                // Removed 'git pull --rebase origin main' because 'checkout scm' just performed the pull
                
                sh 'echo "Contents of workspace after checkout:"'
                sh 'ls -a'
            }
        }
        stage('Build and Test') {
            steps {
                sh 'ls -ltr'
                // build the project and create a JAR file
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
            }
        }
        stage('Static Code Analysis') {
            environment {
                SONAR_URL = "http://192.168.1.50:9000"
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
                }
            }
        }
        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "rahul407/ultimate-cicd:${BUILD_NUMBER}"
                // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
                REGISTRY_CREDENTIALS = credentials('docker-cred')
            }
            steps {
                script {
                    sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Update Deployment File') {
            environment {
                GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
                GIT_USER_NAME = "Vakram"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    script {
                        dir(env.WORKSPACE) { 
                            sh '''
                                git config user.email "vasimvasim6303@gmail.com"
                                git config user.name "Vakram"
                                BUILD_NUMBER=${BUILD_NUMBER}
                                
                                # This sed command correctly updates the image tag regardless of the previous tag number.
                                sed -i "s|image: rahul407/ultimate-cicd:[0-9]*|image: rahul407/ultimate-cicd:${BUILD_NUMBER}|g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                                
                                git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                                
                                git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                                
                                git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                            '''
                        } 
                    } 
                } 
            } 
        } 
    } 
}
