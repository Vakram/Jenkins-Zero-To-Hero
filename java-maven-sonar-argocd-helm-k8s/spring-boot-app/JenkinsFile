pipeline {
    agent {
        docker {
            image 'rahul407/jenkins-maven-java17-agent:latest'
            // We MUST keep --user root here to give the shell commands maximum chance of success
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock --network host' 
        }
    }
    
    options {
        skipDefaultCheckout() 
    }

    stages {
        stage('Checkout') {
            environment {
                REPO_URL = "https://github.com/Vakram/Jenkins-Zero-To-Hero"
                BRANCH_NAME = "main"
            }
            steps {
                sh 'echo Starting custom checkout using raw git commands'
                sh 'git config --global --add safe.directory "*"'
                sh 'rm -rf *'
                sh 'rm -rf .git'
                sh "git clone ${REPO_URL} ."
                sh "git checkout ${BRANCH_NAME}"
                sh 'ls -a'
            }
        }

        stage('Build and Test') {
            steps {
                // Using 'dir' block is cleaner than 'cd && command'
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Static Code Analysis') {
            environment {
                SONAR_URL = "http://172.17.217.202:9000"
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        // FIX: Using the fully qualified plugin name to avoid the 'prefix sonar' error
                        sh """
                            mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.1.2184:sonar \
                            -Dsonar.login=${SONAR_AUTH_TOKEN} \
                            -Dsonar.host.url=${SONAR_URL}
                        """
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "rahul407/ultimate-cicd:${BUILD_NUMBER}"
            }
            steps {
                script {
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        sh "docker build -t ${DOCKER_IMAGE} ."
                    }
                    docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                        docker.image("${DOCKER_IMAGE}").push()
                    }
                }
            }
        }

        stage('Update Deployment File') {
            environment {
                GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
                GIT_USER_NAME = "Vakram"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    script {
                        sh '''
                            git config user.email "vasimvasim6303@gmail.com"
                            git config user.name "Vakram"
                            
                            sed -i "s|image: rahul407/ultimate-cicd:[0-9]*|image: rahul407/ultimate-cicd:${BUILD_NUMBER}|g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                            
                            git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                        '''
                    } 
                } 
            } 
        } 
    } 
}
